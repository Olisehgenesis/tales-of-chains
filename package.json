{
  "name": "tales",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "web:dev": "next dev -p 3004",
    "dev": "concurrently -n next,worker -c blue,magenta \"pnpm web:dev\" \"WORKER_PORT=5001 pnpm worker:dev\"",
    "build": "next build",
    "start": "next start -p 3004",
    "lint": "eslint",
    "api:dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "api:build": "prisma generate && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "api:start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "worker:dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register scripts/battleWorker.ts",
    "dev:all": "concurrently -n next,worker -c blue,magenta \"pnpm web:dev\" \"WORKER_PORT=5001 pnpm worker:dev\""
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@reown/appkit": "^1.2.4",
    "@reown/appkit-adapter-wagmi": "^1.2.4",
    "@tanstack/react-query": "^5.59.16",
    "@wagmi/core": "^2.22.1",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.2.1",
    "lucide-react": "^0.548.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "viem": "^2.21.15",
    "wagmi": "^2.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.0.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "prisma": "^5.19.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
